<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MySimpleApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/f1_primary</item>
        <item name="colorOnPrimary">@color/f1_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/f1_accent</item>
        <item name="colorSecondaryVariant">@color/f1_accent</item>
        <item name="colorOnSecondary">@color/f1_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextContent.HeadlineMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>
    <style name="TextContent.HeadlineMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextContent.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>
    <style name="TextContent.BodyMedium.F1Text">
        <item name="android:textColor">@color/f1_text</item>
    </style>
    <style name="TextContent.BodyMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>